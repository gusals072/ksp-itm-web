import { useState } from 'react'
import { useUpdateTicketStatus } from '../lib/mutations'
import { TicketStatus, TICKET_STATUS_LABELS, type TicketStatusType } from '../constants/ticket'
import { CheckCircle } from 'lucide-react'

interface TicketStatusSTXProps {
  ticketId: string
  currentStatus: TicketStatusType
  disabled?: boolean
}

export function TicketStatusSTX({ ticketId, currentStatus, disabled }: TicketStatusSTXProps) {
  const updateStatusMutation = useUpdateTicketStatus()
  const [showCompletionModal, setShowCompletionModal] = useState(false)
  const [completionReason, setCompletionReason] = useState('')

  const handleStatusClick = (newStatus: TicketStatusType) => {
    if (newStatus === currentStatus) return

    // 처리중 상태에서만 완료됨으로 변경 가능
    if (currentStatus === TicketStatus.IN_PROGRESS && newStatus === TicketStatus.RESOLVED) {
      setShowCompletionModal(true)
    } else {
      // 다른 상태 변경은 허용하지 않음
      return
    }
  }

  const handleCompleteConfirm = () => {
    if (!completionReason.trim()) {
      alert('완료 사유를 입력해주세요.')
      return
    }

    updateStatusMutation.mutate({
      ticketId,
      status: TicketStatus.RESOLVED,
      comment: completionReason
    }, {
      onSuccess: () => {
        setShowCompletionModal(false)
        setCompletionReason('')
      }
    })
  }

  const handleModalClose = () => {
    setShowCompletionModal(false)
    setCompletionReason('')
  }

  return (
    <>
      <div className="bg-white border border-gray-200 rounded-lg p-6">
        <h3 className="text-lg font-semibold text-gray-800 mb-4">티켓 상태</h3>

        {/* 현재 상태 표시 */}
        <div className="mb-4">
          <div className="flex items-center justify-between">
            <span className="text-sm text-gray-600">현재 상태</span>
            <span className={`px-3 py-1 rounded-full text-sm font-medium ${
              currentStatus === TicketStatus.ISSUE_RAISED ? 'bg-gray-100 text-gray-800' :
              currentStatus === TicketStatus.IN_PROGRESS ? 'bg-blue-100 text-blue-800' :
              currentStatus === TicketStatus.MEETING_SCHEDULED ? 'bg-yellow-100 text-yellow-800' :
              'bg-green-100 text-green-800'
            }`}>
              {TICKET_STATUS_LABELS[currentStatus]}
            </span>
          </div>
        </div>

        {/* 상태 변경 버튼 - 처리중 상태에서만 완료 버튼 표시 */}
        {currentStatus === TicketStatus.IN_PROGRESS && (
          <div className="border-t border-gray-200 pt-4">
            <div className="flex justify-center">
              <button
                onClick={() => handleStatusClick(TicketStatus.RESOLVED)}
                disabled={disabled || updateStatusMutation.isPending}
                className="flex items-center gap-2 px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
              >
                <CheckCircle className="w-4 h-4" />
                {updateStatusMutation.isPending ? '처리 중...' : '완료 처리'}
              </button>
            </div>
          </div>
        )}

        {/* 상태 설명 */}
        <div className="mt-4 text-xs text-gray-500">
          {currentStatus === TicketStatus.ISSUE_RAISED && '담당자를 배정하면 처리중 상태로 변경됩니다.'}
          {currentStatus === TicketStatus.IN_PROGRESS && '티켓을 완료하려면 완료 처리 버튼을 클릭하세요.'}
          {currentStatus === TicketStatus.MEETING_SCHEDULED && '주간 회의에서 처리될 예정입니다.'}
          {currentStatus === TicketStatus.RESOLVED && '이 티켓은 완료되었습니다.'}
        </div>
      </div>

      {/* 완료 사유 입력 모달 */}
      {showCompletionModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
          <div className="bg-white rounded-lg p-6 max-w-md w-full mx-4">
            <h3 className="text-lg font-semibold mb-4">티켓 완료 처리</h3>
            <p className="text-sm text-gray-600 mb-4">
              이 티켓을 어떻게 완료했는지 설명해주세요.
            </p>
            <textarea
              className="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
              rows={4}
              placeholder="완료 방법을 입력하세요..."
              value={completionReason}
              onChange={(e) => setCompletionReason(e.target.value)}
            />
            <div className="flex justify-end space-x-2 mt-4">
              <button
                onClick={handleModalClose}
                className="px-4 py-2 text-gray-600 border border-gray-300 rounded-md hover:bg-gray-50"
              >
                취소
              </button>
              <button
                onClick={handleCompleteConfirm}
                disabled={updateStatusMutation.isPending}
                className="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed"
              >
                {updateStatusMutation.isPending ? '처리 중...' : '완료'}
              </button>
            </div>
          </div>
        </div>
      )}
    </>
  )
}



function StatusButton({
  status,
  isActive,
  onClick,
  disabled
}: {
  status: TicketStatusType
  isActive: boolean
  onClick: () => void
  disabled?: boolean
}) {
  return (
    <button
      onClick={onClick}
      disabled={disabled || isActive}
      className={`
        px-3 py-2 rounded-md text-sm font-medium transition-colors
        ${isActive
          ? 'bg-blue-600 text-white cursor-not-allowed'
          : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
        }
        ${disabled ? 'opacity-50 cursor-not-allowed' : ''}
      `}
    >
      {TICKET_STATUS_LABELS[status]}
    </button>
  )
}



